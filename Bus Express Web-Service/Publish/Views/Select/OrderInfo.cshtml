@model List<BusExpress.BLL.Dto.OrderInfoDto>
@{
    ViewBag.Title = "Orders Info";
}

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<section class="ftco-section">
    <div class="container">

        <hr />
        <h2 style="text-align:center;color:blue;font-family:'Palatino Linotype';font-weight:bold">
            <span style="background-color:black;color:white;padding:12px">
                Orders Information Table
            </span>
        </h2>
        <hr />

        <div class="row">
            <div style="margin-top:10px" class="col">
                @Html.ActionLink("Add New One", "OrderInfo", "Create", null, new { @class = "btn btn-success", style = "margin-top:-32px" })
            </div>
            <div class="col-md-12">
                @if (ViewBag.IsEmpty == false)
                {
                    <div class="table-wrap" style="overflow: auto; width: 100%">
                        @using (Html.BeginForm())
                        {
                            <table class="table table-dark table-bordered table-hover">
                                <thead>
                                    <tr class="bg-light">
                                        <th>#</th>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>First & Last Name</th>
                                        <th>Place Number</th>
                                        <th>Phone</th>
                                        <th>Order Number</th>
                                        <th>Money Amount</th>
                                        <th>Is Ordered</th>
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="bg-primary">
                                            <td scope="row">@item.Id</td>
                                            <td>@item.From</td>
                                            <td>@item.To</td>
                                            <td>@item.LName_FName</td>
                                            <td>@item.PlaceNumber</td>
                                            <td>@item.Phone</td>
                                            <td>@item.OrderNumber</td>
                                            <td>@item.MoneyAmount</td>
                                            <td>@item.IsOrdered</td>
                                            <td><a href="/Edit/OrderInfo?id=@item.Id"><i class="fa fa-edit"></i></a></td>
                                            <td><a href="/Details/OrderInfo?id=@item.Id" style="border:1px solid;padding:2px;"><i style="width: 20px" class="fa fa-info"></i></a></td>
                                            <td><a href="/Delete/OrderInfo?id=@item.Id"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                }
                else
                {
                    <div class="table-wrap" style="border: 1px solid red;background-color:red;padding:33px">
                        <h3 style="text-align:center;color:white;border:2px solid red">
                            @ViewBag.EmptyMsg
                        </h3>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    /* Tooltip container */
    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black; /* If you want dots under the hoverable text */
    }

        /* Tooltip text */
        .tooltip .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: black;
            color: #fff;
            text-align: center;
            padding: 5px 0;
            border-radius: 6px;
            /* Position the tooltip text - see examples below! */
            position: absolute;
            z-index: 1;
        }

        /* Show the tooltip text when you mouse over the tooltip container */
        .tooltip:hover .tooltiptext {
            visibility: visible;
        }
</style>

