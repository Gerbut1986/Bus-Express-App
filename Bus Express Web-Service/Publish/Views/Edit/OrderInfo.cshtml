@model BusExpress.BLL.Dto.OrderInfoDto
@{
    ViewBag.Title = "Orders Info Edit";
}
<hr />
<h2 style="text-align:center;color:blue;font-family:'Palatino Linotype';font-weight:bold">
    <span style="background-color:black;color:white;padding:12px">
        Orders Info - [Edit Form]
    </span>
</h2>
<hr />

@if (BusExpress.PL.Controllers.EditController.IsError == true)
{
    <h3 style="color:red;text-align:center;font-family:'Palatino Linotype';font-weight:bold">
        @ViewBag.Error
    </h3>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="width: 400px; margin: auto; padding: 22px; background-image: linear-gradient(black, green, darkgray) " class="form-horizontal">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h5>From:</h5>
                <div style="text-align:center" class="col-md-12">
                    @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>To:</h5>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>First & Last Name:</h5>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.LName_FName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LName_FName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Seat number available:</h5>
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.PlaceNumber, ViewBag.Places as SelectList, "", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.PlaceNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Phone:</h5>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Order Number:</h5>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.OrderNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Money Amount:</h5>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.MoneyAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoneyAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Is Ordered:</h5>
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.IsOrdered, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsOrdered, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group" style="text-align:center;margin-top:10px">
                <div class="col-md-offset-2 col-md-12" style="text-align:center">
                    <input type="submit" value="Create" style="width: 200px" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div style="text-align:center;margin-top:15px">
    @Html.ActionLink("Back to List", "OrderInfo", "Select", null, new { style = "", @class = "btn btn-danger" })
</div>

<style>
    h5 {
        color: gold;
    }
</style>