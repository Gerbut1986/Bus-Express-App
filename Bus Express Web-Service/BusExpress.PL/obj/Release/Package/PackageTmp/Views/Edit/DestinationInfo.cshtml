@model BusExpress.PL.Models.FromToModel
@{
    ViewBag.Title = "Destination Info Edit";
}
<hr />
<h2 style="text-align:center;color:blue;font-family:'Palatino Linotype';font-weight:bold">
    <span style="background-color:gold;color:black;padding:12px">
        Destination Info - [Edit Form]
    </span>
</h2>
<hr />

@if (BusExpress.PL.Controllers.EditController.IsError == true)
{
    <h3 style="color:red;text-align:center;font-family:'Palatino Linotype';font-weight:bold">
        @ViewBag.Error
    </h3>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="width: 400px; margin: auto; padding: 22px; background-image: linear-gradient(black, orange, darkgray) " class="form-horizontal">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h5>From:</h5>
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <h5>To:</h5>
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group" style="text-align:center;margin-top:10px">
                <div class="col-md-offset-2 col-md-12" style="text-align:center">
                    <input type="submit" value="Update" style="width: 200px" class="btn btn-warning" />
                </div>
            </div>
        </div>
    </div>
}

<div style="text-align:center;margin-top:15px">
    @Html.ActionLink("Back to List", "OrderInfo", "Select", null, new { style = "", @class = "btn btn-danger" })
</div>

<style>
    h5 {
        color: gold;
    }
</style>